<h1>Amnests index</h1>

<div class="table-responsive">
<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Story</th>
    </tr>
  </thead>

  <tbody>
    <% @amnests.each do |amnest| %>
      <tr>
        <td><%= amnest.first_name %></td>
        <td><%= amnest.story %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>