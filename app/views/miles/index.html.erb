<h1>Listing Miles</h1>

<div class="table-responsive">
<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Airline</th>
      <th>Rewards</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @miles.each do |mile| %>
      <tr>
        <td><%= mile.airline %></td>
        <td><%= mile.rewards %></td>
        <td><%= mile.email %></td>
        <td><%= link_to 'Show', mile %></td>
        <td><%= link_to 'Edit', edit_mile_path(mile) %></td>
        <td><%= link_to 'Destroy', mile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Mile', new_mile_path %>
